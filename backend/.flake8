[flake8]
format = "wemake"
show-source = true

ignore =
    E133,
    C812,
    EXE001,
    W503,
    WPS111,
    WPS221,
    WPS305,
    WPS306,
    WPS316,
    WPS326,
    WPS332,
    WPS348,
    WPS352,
    WPS404,
    WPS421,
    WPS430,
    WPS437,
    WPS453,

per-file-ignores =
    config.py*:WPS407,WPS102

max-line-length = 79
max-doc-length = 70
select =
    E,
    F,
    W,
    C
doctests = True
max-complexity = 15
max-module-members = 15
max-local-variables = 7
